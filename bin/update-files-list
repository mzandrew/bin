#!/bin/bash -e

configfile="${HOME}/.update-files-lists-rc"
if [ ! -e "${configfile}" ]; then
	echo "
source=\"${HOME}\"
name=\"mza-carbon-x1\"
destination=\"${HOME}/files-lists\"
" >"${configfile}"
fi

. "${configfile}"

cd "${source}"
date=$(date +"%Y-%m-%d")
filename="${destination}/${date}.${name}.lf-r"
lf > ${filename} 2>/dev/null

cd "${destination}"
find -maxdepth 1 -type f -iname "*${name}*" | sort

